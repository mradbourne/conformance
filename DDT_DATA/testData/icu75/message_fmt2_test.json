{
  "test_type": "message_fmt2",
  "tests": [
    {
      "label": "Literal text: Includes basic literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "hello world"
    },
    {
      "label": "Literal text: Includes unquoted literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "hello {world}"
    },
    {
      "label": "Whitespace: Preserves leading space on basic literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "  hello world"
    },
    {
      "label": "Whitespace: Removes leading space on unquoted literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "hello {  world}"
    },
    {
      "label": "Whitespace: Preserves trailing space on basic literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "hello world  "
    },
    {
      "label": "Whitespace: Removes trailing space on unquoted literals",
      "testSubType": "syntax",
      "locale": "en-US",
      "pattern": "hello {world  }"
    }
  ]
}
