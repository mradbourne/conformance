{
  "test_type": "message_fmt2",
  "tests": [
    {
      "label": "00000",
      "test_description": "Literal text: Includes basic literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "hello world"
    },
    {
      "label": "00001",
      "test_description": "Literal text: Includes unquoted literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "hello {world}"
    },
    {
      "label": "00002",
      "test_description": "Whitespace: Preserves leading space on basic literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "  hello world"
    },
    {
      "label": "00003",
      "test_description": "Whitespace: Removes leading space on unquoted literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "hello {  world}"
    },
    {
      "label": "00004",
      "test_description": "Whitespace: Preserves trailing space on basic literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "hello world  "
    },
    {
      "label": "00005",
      "test_description": "Whitespace: Removes trailing space on unquoted literals",
      "test_subtype": "syntax",
      "locale": "en-US",
      "pattern": "hello {world  }"
    }
  ]
}